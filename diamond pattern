#include <stdio.h>
#include <conio.h>

int main()
{
    int n = 5, i , j, k;
    
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < (n-i); j++)
        {
            printf(" ");
        }
        for (k = n-i; k <= (n+i); k++)
        {
            printf("*");
        }
        printf("\n");
    }
    for (i = 2; i <= n; i++)
    {
        for (j = 1; j <= i; j++)
        {
            printf(" ");
        }
        for (k = i; k <= (n+n-i); k++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}
