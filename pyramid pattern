#include <stdio.h>
#include <conio.h>

int main()
{
    int n, i , j, k;
    
    printf("Enter the number: ");
    scanf("%d", &n);
    
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < (n-i); j++)
        {
            printf(" ");
        }
        for (k = n-i; k <= (n+i); k++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    return 0;
}
